// Poll user button for 3 seconds (3000 ms)
  uint32_t startTick = HAL_GetTick();
  uint8_t buttonPressed = 0;
  while ((HAL_GetTick() - startTick) < 3000)
  {
	  // Check if button is pressed (assuming active low)
	  if (HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13) == GPIO_PIN_RESET)
	  {
		  buttonPressed = 1;
		  break;
	  }
	  HAL_Delay(10); // small debounce delay
  }

  if (!buttonPressed)
  {
	  // No button press detected within 3 seconds, jump to app
	  JumpToApplication(0x08004000);
	  while (1);
  }